        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="1060dp"
            android:src="@drawable/img_6"/>
        <EditText
            android:id="@+id/lang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Language Known"
            android:inputType="textPersonName"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="1120dp"
           />
        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="1120dp"
            android:src="@drawable/img_7"/>
        <EditText
            android:id="@+id/hobies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hobies"
            android:inputType="textPersonName"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="1180dp"
           />
        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="1180dp"
            android:src="@drawable/img_8"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="1380dp"
            android:text="SUBMIT"
            android:textSize="25dp"
            android:onClick="third"
            android:id="@+id/bt3goto"/>
        <EditText
            android:id="@+id/fphn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Father's Phone No"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="1240dp"
           />
        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="1245dp"
            android:src="@drawable/img_9"/>
        <EditText
            android:id="@+id/mphno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mother's Phone No"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="1300dp"
           />

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="1300dp"
            android:src="@drawable/lsa"/>



    </RelativeLayout>





</ScrollView>